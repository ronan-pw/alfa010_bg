#include "acr_creature_i"

////////////////////////////////////////////////////////////////////////////////
// Constants ///////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Structures //////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Global Variables ////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Function Prototypes /////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Function Definitions ////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

void main()
{
	object o = GetLastPerceived();
	
    ACR_CreatureOnPerception();
	
	if (GetIsObjectValid(GetLocalObject(OBJECT_SELF,"target")))
		return;

	if (GetIsPC(o)) {
		SetLocalObject(OBJECT_SELF,"target",o);
		ActionMoveToObject(o,TRUE);
		DelayCommand(1.0,ActionStartConversation(o,"bg_thug"));
	}
}